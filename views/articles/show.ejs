        <div>
            <!-- <%- article.sanitizedHtml %> -->
            <span>Status : Pending</span> <br>
            <span>Lakshman Gope - </span>
            <span>173-35-2256</span>
            <div class="card-text mb-2"> description: <br> <%= article.description %></div>
            <div class="card-text mb-2"> Markdown : <br> <%= article.markdown %></div> <br>
        </div>
        <a href="/management" class="btn btn-secondary">All Proposals</a>
        <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Accept</a>
