<div class="">
    <!-- Navbar -->
    <%- include('../common/navbar.ejs') %>

    <!-- welcome message -->
    <h1 class="mb-4">Welcome to Project Fair <span class="text-capitalize"> <%= student.studentName %> 🎉 </span> </h1>

    <% if (!proposal){ %>
    <div>
        <p>Looks like you didn't add any proposal. Submit your best project as proposal and show the world your
            best! 🙂</p>
        <a href="/student/new-proposal/<%= student.studentId %>" class="btn btn-success">Add Project</a>
    </div>
    <% } else { %>
    <div>
        <p>This is your Project! 🙂🙂</p>
    </div>
    <div class="card mt-4">
        <div class="card-body">

            <!-- Project Title -->
            <h4 class="card-title"><%= proposal.projectTitle %></h4>

            <!-- Student Id -->
            <span>Student ID: <%= proposal.studentId %></span>

            <!-- Project Submission Time -->
            <div class="card-subtitle text-muted mb-2">
                <p>Created At : <%= proposal.createdAt.toLocaleDateString() %></p>
            </div>

            <!-- Project Description -->
            <div class="card-text mb-2">
                <span class="text-info">Description :</span> <br>
                <%= proposal.projectDes %>
            </div>

            <!-- Project Language -->
            <div class="card-text mb-2">
                <span class="text-info">Project Lang :</span> <br>
                <%= proposal.projectLang %>
            </div>

            <!-- status -->
            <% if (proposal.isApproved === 'Pending') { %>
            <span class="text-info">Status : <%= proposal.isApproved %></span> <br>
            <% } else if (proposal.isApproved === 'Accepted') { %>
            <span class="text-success">Status : <%= proposal.isApproved %></span> <br>
            <% } else { %>
            <span class="text-danger">Status : <%= proposal.isApproved %></span> <br>
            <% } %>
        </div>
    </div>

    <!-- Project Granted Info -->
    <% if (proposal.isApproved === 'Pending') { %>
    <div class="result-info mb-4">
        <p class="text-info">Keep eye on Status. You will see chages after accepted or rejected your
            proposal.</p>

        <span class="bg-light text-dark">Wish you all the best ❤👍</span>
    </div>

    <% } else if (proposal.isApproved === 'Accepted') { %>
    <div class="result-info mb-4">
        <p class="text-success"> <span class="font-weight-bold">Congratulations 🎊 </span> Your Proposal Accepted
            ❤👍</p>
    </div>

    <% } else if (proposal.isApproved === 'Rejected') { %>
    <div class="result-info mb-4">
        <p class="text-danger">We're Sorry to say Your proposal Rejected.</p>
        <span class="bg-light text-dark">Batter Luck Next Time ❤👍</span>
    </div>
    <% } %>
    <% } %>
</div>
<div class="fixed-bottom">
    <!-- Footer -->
    <%- include('../common/footer.ejs') %>
    <!-- Footer -->
</div>